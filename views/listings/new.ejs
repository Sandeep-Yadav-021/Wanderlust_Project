<%- layout("./layouts/boilerplate")%>

<!-- <body> -->
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />

    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
        <div class="valid-feedback">Title Looks Good!</div>
        <div class="invalid-feedback">Please enter a valid title!</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-lable">Upload Liting Image</lable>
        <input name="listing[image]"  type="file" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-lablel">Price</lable>
          <input name="listing[price]" placeholder="1200" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter a valid price!</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="location" class="form-lable">Location</lable>
          <input name="listing[location]" placeholder="Jaipur,Rajsthan" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter a valid location!</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="country" class="form-lable">Country</lable>
        <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
        <div class="invalid-feedback">Please enter a valid country!</div>
      </div>
      <br /> <br />

      <button class="btn btn-dark add-btn">Add</button>

    </form>
  </div>
</div>

